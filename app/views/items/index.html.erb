<div class="contents row">
  <% @items.each do |item| %>
    <div class="content_post" style="background-image: url(<%= item.image %>);">
      <div class="more">
        <span><%= image_tag 'arrow_top.png'%></span>
        <ul class="more_list">
          <li>
            <%= link_to'削除', item_path(item.id), method: :delete %>
            <%# Prefixの引数 %>
            <%# アイテムのID（item.id） %>
            <%# HTTPメソッドは、DELETEというHTTPメソッド %>
            <%# methodオプションにシンボルで:delete %>
          </li>
        </ul> 
       </div>    
      <p><%= item.text %></p>
      <span class="name">
        <%= item.name %>
      </span>
    </div>
  <% end %>  
</div>

