<div class="contents row">
  <div class="container">
    <h3>投稿する</h3>
    <%= form_with(model: @item, local: true) do |form| %>
      <%= form.text_field :name, placeholder: "Nickname" %>
      <%= form.file_field :image %>
      <%= form.text_area :text, placeholder: "text", rows: "10" %>
      <%= form.submit "SEND" %>
    <% end %>
  </div>
</div>